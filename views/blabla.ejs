<!DOCTYPE html>
<html lang="en">
    <head>
        <title>A secund node page</title>
      <%- include('./partials/head.ejs') %>
    </head>
    <body>
        <nav>
            <div class="nav-wrapper purple darken-1">
              <a href="/" class="brand-logo"><i class="material-icons">surfing</i>AureliA</a>
              <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/contact">Contact</a></li>
              </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <form class="col s12">
                  <div class="row">
                    <div class="input-field col s6">
                      <i class="material-icons prefix">face</i>
                      <input id="pers-name" type="text" class="validate" name="pers-name">
                      <label for="pers-name">Person name</label>
                    </div>
                    <div class="input-field col s6">
                      <i class="material-icons prefix">phone</i>
                      <input id="icon_telephone" type="tel" class="validate" name="telephone">
                      <label for="icon_telephone">Telephone</label>
                    </div>
                  </div>
                  <button class="btn">Send</button>
                </form>
              </div>
        </div>

        <div class="container">
          <ul class="collection with-header">
            <li class="collection-header deep-purple lighten-4"><h4>Contact's family</h4></li>
            <% if (names.length>0) { %>
               <% names.forEach(name => { %>
                  <li class="collection-item avatar">
                    <span class="title"><%= name.name %></span>
                    <p><%= name.tel %></p>
                    <a href="#!" class="secondary-content">
                      <i class="material-icons">delete</i><i class="material-icons">edit</i></a>
                  </li>
                <% }); %>
            <% } else{ %>
                <li>there are no contacts</li>
            <% } %>
          </ul>
        </div>
    </body>
</html>
